<!--pages/text/text.wxml-->

<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable: true -->
<!-- 默认情况小text长按是不能选中的 -->
<text selectable="{{true}}">Hello dlwlrma\n</text>
<text selectable>Hello dlwlrma\n</text>

<!-- 3.sapce: 决定文本空格的大小 -->
<!-- ensp: 半个中文字符的大小 -->
<!-- emsp: 一个中文字符的大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>

<!-- 4.decode属性: 是否解码文本 -->
<text decode="{{true}}">5 &gt; 3</text>