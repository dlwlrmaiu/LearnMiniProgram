<!-- 1.设置样式的三种方式 -->
<!-- 1.1.行内样式 -->
<view style="color: red;font-size: 32px;">dlwlrma</view>

<!-- 1.2.业内样式 -->
<view class="v1">dlwlrma</view>

<!-- 1.3.全局样式 -->
<view class="container">dlwlrma</view>

<!-- 2.三种样式作用于同一个组件!important权重无穷大 -->
<view style="background: red" class="content">dlwlrma</view>

<!-- 3.wxss中的单位: rpx在iiPhone6上面1px=2rpx -->
<!-- 前端也需要进行配置尺寸的适配: em/rem/vw/vh -->
<view class="view1"></view>
<view class="view2"></view>

